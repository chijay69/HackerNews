<div class="search">
  {% if query %}
  <h1>Items containing "{{ query }}"</h1>
  <h3>
    {% with results.count as total_results %}
    Found {{ total_results }} result{{ total_results|pluralize }}
    {% endwith %}
  </h3>
  {% for post in results %}
  <h4>
    <a href="{{ post.get_absolute_url }}">{{ post.title }}</a>
  </h4>
  {{ post.text|truncatewords_html:5 }}
  {% empty %}
  <p>There are no results for your query.</p>
  {% endfor %}
  <p><a href="{% url "post_search" %}">Search again</a></p>
  {% else %}
  <form action="{% url "post_search" %}" method="get" style="text-align:left;">
    <input style="text-align:left;" type="search", name="query", placeholder="search"/>
    <input style="text-align:right;" type="submit" value="Search">
  </form>
  {% endif %}

</div>
